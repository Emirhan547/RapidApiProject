@model UpdateRoomDto
@{
    ViewData["Title"] = "Odayı Güncelle";
    ViewData["Description"] = "Oda bilgisini güncelleyin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex flex-col space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-text-main dark:text-white">Odayı Güncelle</h1>
            <p class="text-text-sub dark:text-gray-400 mt-1">Oda bilgisini aşağıdaki form üzerinden güncelleyebilirsiniz.</p>
        </div>
        <a href="/Admin/Room/Index"
           class="inline-flex items-center justify-center gap-2 border border-gray-300 dark:border-gray-600 hover:border-gray-400 dark:hover:border-gray-500 text-text-main dark:text-gray-300 hover:text-text-main dark:hover:text-white font-medium py-3 px-5 rounded-lg transition-all duration-200 mt-4 sm:mt-0">
            <span class="material-symbols-outlined text-sm">arrow_back</span>
            Listeye Dön
        </a>
    </div>

    <!-- Content Area -->
    <div class="bg-surface-light dark:bg-surface-dark rounded-2xl shadow p-6">
        <div class="flex items-center gap-3 mb-6 pb-4 border-b border-gray-200 dark:border-gray-700">
            <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
                <span class="material-symbols-outlined text-primary">edit</span>
            </div>
            <div>
                <h2 class="text-lg font-semibold text-text-main dark:text-white">Oda Güncelleme Formu</h2>
                <p class="text-sm text-text-sub dark:text-gray-400">Değişiklikleri kaydedin</p>
            </div>
        </div>

        <form method="post">
            <input type="hidden" asp-for="Id" />

            <!-- Oda Numarası ve Başlık -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <label class="block text-sm font-medium text-text-main dark:text-gray-300 mb-2">
                        Oda Numarası
                    </label>
                    <input type="text" asp-for="RoomNumber"
                           class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-text-main dark:text-white focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none transition-all duration-200" />
                    <span asp-validation-for="RoomNumber" class="text-sm text-red-500 mt-1 block"></span>
                </div>

                <div>
                    <label class="block text-sm font-medium text-text-main dark:text-gray-300 mb-2">
                        Oda Başlığı
                    </label>
                    <input type="text" asp-for="Title"
                           class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-text-main dark:text-white focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none transition-all duration-200" />
                    <span asp-validation-for="Title" class="text-sm text-red-500 mt-1 block"></span>
                </div>
            </div>

            <!-- Fiyat ve Detaylar -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
                <div>
                    <label class="block text-sm font-medium text-text-main dark:text-gray-300 mb-2">
                        Fiyat (₺)
                    </label>
                    <input type="text" asp-for="Price"
                           class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-text-main dark:text-white focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none transition-all duration-200" />
                    <span asp-validation-for="Price" class="text-sm text-red-500 mt-1 block"></span>
                </div>

                <div>
                    <label class="block text-sm font-medium text-text-main dark:text-gray-300 mb-2">
                        Yatak Odası Sayısı
                    </label>
                    <input type="text" asp-for="BedCount"
                           class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-text-main dark:text-white focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none transition-all duration-200" />
                    <span asp-validation-for="BedCount" class="text-sm text-red-500 mt-1 block"></span>
                </div>

                <div>
                    <label class="block text-sm font-medium text-text-main dark:text-gray-300 mb-2">
                        Banyo Sayısı
                    </label>
                    <input type="text" asp-for="BathCount"
                           class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-text-main dark:text-white focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none transition-all duration-200" />
                    <span asp-validation-for="BathCount" class="text-sm text-red-500 mt-1 block"></span>
                </div>
            </div>

            <!-- Resim ve Wifi -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <label class="block text-sm font-medium text-text-main dark:text-gray-300 mb-2">
                        Oda Kapak Fotoğrafı
                    </label>
                    <input type="text" asp-for="RoomCoverImage"
                           class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-text-main dark:text-white focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none transition-all duration-200" />
                    <span asp-validation-for="RoomCoverImage" class="text-sm text-red-500 mt-1 block"></span>
                </div>

                <div>
                    <label class="block text-sm font-medium text-text-main dark:text-gray-300 mb-2">
                        Wifi Şifresi
                    </label>
                    <input type="text" asp-for="Wifi"
                           class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-text-main dark:text-white focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none transition-all duration-200" />
                    <span asp-validation-for="Wifi" class="text-sm text-red-500 mt-1 block"></span>
                </div>
            </div>

            <!-- Açıklama -->
            <div class="mb-6">
                <label class="block text-sm font-medium text-text-main dark:text-gray-300 mb-2">
                    Açıklama
                </label>
                <textarea asp-for="Description" rows="4"
                          class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-text-main dark:text-white focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none transition-all duration-200"></textarea>
                <span asp-validation-for="Description" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <!-- Form Actions -->
            <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 pt-6 border-t border-gray-200 dark:border-gray-700">
                <a href="/Admin/Room/Index"
                   class="inline-flex items-center justify-center gap-2 border border-gray-300 dark:border-gray-600 hover:border-gray-400 dark:hover:border-gray-500 text-text-main dark:text-gray-300 hover:text-text-main dark:hover:text-white font-medium py-3 px-6 rounded-lg transition-all duration-200">
                    <span class="material-symbols-outlined">close</span>
                    İptal
                </a>
                <button type="submit"
                        class="inline-flex items-center justify-center gap-2 bg-green-600 hover:bg-green-700 text-white font-medium py-3 px-6 rounded-lg transition-all duration-200">
                    <span class="material-symbols-outlined">check</span>
                    Odayı Güncelle
                </button>
            </div>
        </form>
    </div>
</div>