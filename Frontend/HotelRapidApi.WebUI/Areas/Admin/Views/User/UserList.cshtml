@model List<ResultAppUserListDto>
@{
    ViewData["Title"] = "Kullanıcı Detayları";
    ViewData["Description"] = "Kullanıcı istatistikleri ve detayları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="flex flex-col space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center justify-between">
        
    </div>

    <!-- İstatistikler -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-surface-light dark:bg-surface-dark rounded-2xl shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <h3 class="text-2xl font-bold text-text-main dark:text-white">@Model.Count</h3>
                    <p class="text-text-sub dark:text-gray-400 text-sm">Toplam Kullanıcı</p>
                </div>
                <div class="w-12 h-12 bg-blue-50 dark:bg-blue-900/30 rounded-lg flex items-center justify-center">
                    <span class="material-symbols-outlined text-blue-600 dark:text-blue-400">
                        group
                    </span>
                </div>
            </div>
        </div>

        <div class="bg-surface-light dark:bg-surface-dark rounded-2xl shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <h3 class="text-2xl font-bold text-text-main dark:text-white">@Model.Count(u => u.Gender == "Erkek")</h3>
                    <p class="text-text-sub dark:text-gray-400 text-sm">Erkek Kullanıcı</p>
                </div>
                <div class="w-12 h-12 bg-green-50 dark:bg-green-900/30 rounded-lg flex items-center justify-center">
                    <span class="material-symbols-outlined text-green-600 dark:text-green-400">
                        male
                    </span>
                </div>
            </div>
        </div>

        <div class="bg-surface-light dark:bg-surface-dark rounded-2xl shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <h3 class="text-2xl font-bold text-text-main dark:text-white">@Model.Count(u => u.Gender == "Kadın")</h3>
                    <p class="text-text-sub dark:text-gray-400 text-sm">Kadın Kullanıcı</p>
                </div>
                <div class="w-12 h-12 bg-pink-50 dark:bg-pink-900/30 rounded-lg flex items-center justify-center">
                    <span class="material-symbols-outlined text-pink-600 dark:text-pink-400">
                        female
                    </span>
                </div>
            </div>
        </div>

        <div class="bg-surface-light dark:bg-surface-dark rounded-2xl shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <h3 class="text-2xl font-bold text-text-main dark:text-white">@Model.Select(u => u.City).Distinct().Count()</h3>
                    <p class="text-text-sub dark:text-gray-400 text-sm">Farklı Şehir</p>
                </div>
                <div class="w-12 h-12 bg-purple-50 dark:bg-purple-900/30 rounded-lg flex items-center justify-center">
                    <span class="material-symbols-outlined text-purple-600 dark:text-purple-400">
                        location_on
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Area -->
    <div class="bg-surface-light dark:bg-surface-dark rounded-2xl shadow overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h2 class="text-lg font-semibold text-text-main dark:text-white">Kullanıcı Detay Listesi</h2>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-800">
                    <tr>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                            Kullanıcı
                        </th>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                            Şehir
                        </th>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                            Ülke
                        </th>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                            Aktiflik
                        </th>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                            Cinsiyet
                        </th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors">
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-3">
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl"
                                                 alt="@item.Name @item.Surname"
                                                 class="w-10 h-10 rounded-full object-cover border-2 border-white dark:border-gray-700 shadow-sm">
                                        }
                                        else
                                        {
                                            <div class="w-10 h-10 bg-blue-50 dark:bg-blue-900/30 rounded-full flex items-center justify-center">
                                                <span class="material-symbols-outlined text-blue-600 dark:text-blue-400">
                                                    person
                                                </span>
                                            </div>
                                        }
                                        <div>
                                            <div class="text-sm font-medium text-text-main dark:text-white">@item.Name @item.Surname</div>
                                            <div class="text-xs text-text-sub dark:text-gray-400">@item.City, @item.Country</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="inline-flex items-center gap-1 bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-300 px-3 py-1 rounded-full text-xs font-medium">
                                        <span class="material-symbols-outlined text-xs">location_city</span>
                                        @item.City
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="text-sm text-text-sub dark:text-gray-400">@item.Country</span>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-2">
                                        @if (item.Gender == "Erkek")
                                        {
                                            <div class="w-16 bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                                                <div class="bg-green-500 h-2 rounded-full" style="width: 90%"></div>
                                            </div>
                                            <span class="text-xs text-text-sub dark:text-gray-400">90%</span>
                                        }
                                        else if (item.Gender == "Kadın")
                                        {
                                            <div class="w-16 bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                                                <div class="bg-pink-500 h-2 rounded-full" style="width: 90%"></div>
                                            </div>
                                            <span class="text-xs text-text-sub dark:text-gray-400">90%</span>
                                        }
                                        else
                                        {
                                            <div class="w-16 bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                                                <div class="bg-gray-500 h-2 rounded-full" style="width: 50%"></div>
                                            </div>
                                            <span class="text-xs text-text-sub dark:text-gray-400">50%</span>
                                        }
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    @if (item.Gender == "Erkek")
                                    {
                                        <span class="inline-flex items-center gap-1 bg-green-50 text-green-700 dark:bg-green-900/30 dark:text-green-400 px-3 py-1 rounded-full text-xs font-medium">
                                            <span class="material-symbols-outlined text-xs">male</span>
                                            Erkek
                                        </span>
                                    }
                                    else if (item.Gender == "Kadın")
                                    {
                                        <span class="inline-flex items-center gap-1 bg-pink-50 text-pink-700 dark:bg-pink-900/30 dark:text-pink-400 px-3 py-1 rounded-full text-xs font-medium">
                                            <span class="material-symbols-outlined text-xs">female</span>
                                            Kadın
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center gap-1 bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-300 px-3 py-1 rounded-full text-xs font-medium">
                                            <span class="material-symbols-outlined text-xs">person</span>
                                            Belirtilmemiş
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="px-6 py-12 text-center">
                                <div class="flex flex-col items-center justify-center">
                                    <div class="w-16 h-16 bg-gray-100 dark:bg-gray-800 rounded-full flex items-center justify-center mb-4">
                                        <span class="material-symbols-outlined text-gray-400 dark:text-gray-500">group</span>
                                    </div>
                                    <h3 class="text-lg font-medium text-text-main dark:text-white mb-2">Henüz kullanıcı bulunmuyor</h3>
                                    <p class="text-text-sub dark:text-gray-400">Sistemde kayıtlı kullanıcı bulunamadı.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>