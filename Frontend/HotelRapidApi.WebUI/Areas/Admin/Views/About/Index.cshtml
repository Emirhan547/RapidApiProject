@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Hakkımızda Yönetimi";
    ViewData["Description"] = "Sistemde kayıtlı hakkımızda bilgileri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="flex flex-col space-y-6">

    <!-- Content Area -->
    <div class="bg-surface-light dark:bg-surface-dark rounded-2xl shadow overflow-hidden">

        <!-- HEADER: BAŞLIK + SAĞ ÜST BUTON -->
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700
                    flex items-center justify-between">
            <h2 class="text-lg font-semibold text-text-main dark:text-white">
                Hakkımızda Listesi
            </h2>

            @if (Model != null && Model.Any())
            {
                <a href="/Admin/About/AddAbout/"
                   class="inline-flex items-center gap-2 bg-primary hover:bg-primary-dark
                              text-white font-medium py-2.5 px-5 rounded-lg transition-all">
                    <span class="material-symbols-outlined text-sm">add</span>
                    Yeni Hakkımızda Ekle
                </a>
            }
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-800">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">#</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Başlık 1</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Başlık 2</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">İçerik</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">İşlemler</th>
                    </tr>
                </thead>

                <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            count++;
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors">
                                <td class="px-6 py-4">
                                    <div class="w-8 h-8 bg-primary/10 text-primary rounded-lg flex items-center justify-center font-semibold">
                                        @count
                                    </div>
                                </td>
                                <td class="px-6 py-4 text-sm font-medium text-text-main dark:text-white">
                                    @item.Title1
                                </td>
                                <td class="px-6 py-4 text-sm text-text-sub dark:text-gray-400">
                                    @item.Title2
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-sm text-text-sub dark:text-gray-400 truncate max-w-xs">
                                        @(item.Content.Length > 100
                                                                        ? item.Content.Substring(0, 100) + "..."
                                                                        : item.Content)
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-2">
                                <a href="/Admin/About/UpdateAbout/@item.Id"
                                   class="inline-flex items-center gap-1 bg-blue-50 text-blue-600 px-3 py-2 rounded-lg">
                                    <span class="material-symbols-outlined text-sm">edit</span>
                                </a>
                                <a href="/Admin/About/DeleteAbout/@item.Id"
                                   onclick="return confirm('Bu hakkımızda kaydını silmek istediğinize emin misiniz?')"
                                   class="inline-flex items-center gap-1 bg-red-50 text-red-600 px-3 py-2 rounded-lg">
                                    <span class="material-symbols-outlined text-sm">delete</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                                        }
                    }
                    else
                    {
                        <!-- EMPTY STATE -->
                        <tr>
                            <td colspan="5" class="px-6 py-12 text-center">
                                <div class="flex flex-col items-center justify-center">
                                    <div class="w-16 h-16 bg-gray-100 dark:bg-gray-800 rounded-full flex items-center justify-center mb-4">
                                        <span class="material-symbols-outlined text-gray-400">info</span>
                                    </div>
                                    <h3 class="text-lg font-medium text-text-main dark:text-white mb-2">
                                        Henüz hakkımızda bilgisi bulunmuyor
                                    </h3>
                                    <p class="text-text-sub dark:text-gray-400 mb-6">
                                        Yeni bir hakkımızda bilgisi eklemek için butona tıklayın
                                    </p>
                                    <a href="/Admin/About/AddAbout/"
                                       class="inline-flex items-center gap-2 bg-primary hover:bg-primary-dark text-white font-medium py-2.5 px-5 rounded-lg">
                                        <span class="material-symbols-outlined text-sm">add</span>
                                        Yeni Ekle
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
