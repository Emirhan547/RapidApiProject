@using HotelRapidApi.WebUI.Models
@model List<RoleAssignViewModel>

@{

    ViewData["Title"] = "Rol Ata";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check mb-2">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].RoleName" />
            <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
        </div>
    }
    <div class="mt-4">
    <button class="btn btn-success">Kullanıcı İçin Rolleri Güncelle</button>
        <a href="/Admin/RoleAssign/Index" class="btn btn-outline-secondary ml-2">Vazgeç</a>
    </div>
</form>