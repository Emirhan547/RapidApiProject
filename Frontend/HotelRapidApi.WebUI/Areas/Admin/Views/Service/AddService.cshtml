@model CreateServiceDto
@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
    ViewData["Description"] = "Yeni hizmet ekleyin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex flex-col space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center justify-between">
      
        <a href="/Admin/Service/Index"
           class="inline-flex items-center justify-center gap-2 border border-gray-300 dark:border-gray-600 hover:border-gray-400 dark:hover:border-gray-500 text-text-main dark:text-gray-300 hover:text-text-main dark:hover:text-white font-medium py-3 px-5 rounded-lg transition-all duration-200 mt-4 sm:mt-0">
            <span class="material-symbols-outlined text-sm">arrow_back</span>
            Listeye Dön
        </a>
    </div>

    <!-- Content Area -->
    <div class="bg-surface-light dark:bg-surface-dark rounded-2xl shadow p-6">
        <div class="flex items-center gap-3 mb-6 pb-4 border-b border-gray-200 dark:border-gray-700">
            <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
                <span class="material-symbols-outlined text-primary">add</span>
            </div>
            <div>
                <h2 class="text-lg font-semibold text-text-main dark:text-white">Yeni Hizmet Formu</h2>
                <p class="text-sm text-text-sub dark:text-gray-400">Tüm alanları doldurun</p>
            </div>
        </div>

        <form method="post">
            <!-- Hizmet İkonu -->
            <div class="mb-6">
                <label class="block text-sm font-medium text-text-main dark:text-gray-300 mb-2">
                    Hizmet İkonu
                </label>
                <div class="relative">
                    <input type="text" asp-for="ServiceIcon"
                           class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-text-main dark:text-white focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none transition-all duration-200"
                           placeholder="Material icon adı (örn: wifi, restaurant, pool)" />
                    <div class="absolute right-3 top-1/2 transform -translate-y-1/2">
                        <a href="https://fonts.google.com/icons" target="_blank"
                           class="text-sm text-primary hover:text-primary-dark flex items-center gap-1"
                           title="Material Icons">
                            <span class="material-symbols-outlined text-sm">open_in_new</span>
                        </a>
                    </div>
                </div>
                <p class="text-xs text-text-sub dark:text-gray-400 mt-2">
                    Material Symbols'dan icon ismi giriniz. Örnekler: wifi, restaurant, pool, local_bar, room_service
                </p>
                <span asp-validation-for="ServiceIcon" class="text-sm text-red-500 mt-1 block"></span>

                <!-- Icon Preview -->
                <div id="iconPreview" class="mt-4 p-4 bg-gray-50 dark:bg-gray-800 rounded-lg hidden">
                    <div class="flex items-center gap-3">
                        <div class="w-12 h-12 bg-blue-50 dark:bg-blue-900/30 rounded-lg flex items-center justify-center">
                            <span class="material-symbols-outlined text-blue-600 dark:text-blue-400 text-xl" id="previewIcon">
                                category
                            </span>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-text-main dark:text-white">Icon Önizleme</p>
                            <p class="text-xs text-text-sub dark:text-gray-400">Girdiğiniz icon burada görünecek</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Hizmet Başlığı -->
            <div class="mb-6">
                <label class="block text-sm font-medium text-text-main dark:text-gray-300 mb-2">
                    Hizmet Başlığı
                </label>
                <input type="text" asp-for="Title"
                       class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-text-main dark:text-white focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none transition-all duration-200"
                       placeholder="Hizmet başlığı giriniz..." />
                <span asp-validation-for="Title" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <!-- Açıklama -->
            <div class="mb-6">
                <label class="block text-sm font-medium text-text-main dark:text-gray-300 mb-2">
                    Açıklama
                </label>
                <textarea asp-for="Description" rows="4"
                          class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-text-main dark:text-white focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none transition-all duration-200"
                          placeholder="Hizmet açıklaması..."></textarea>
                <span asp-validation-for="Description" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <!-- Form Actions -->
            <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 pt-6 border-t border-gray-200 dark:border-gray-700">
                <a href="/Admin/Service/Index"
                   class="inline-flex items-center justify-center gap-2 border border-gray-300 dark:border-gray-600 hover:border-gray-400 dark:hover:border-gray-500 text-text-main dark:text-gray-300 hover:text-text-main dark:hover:text-white font-medium py-3 px-6 rounded-lg transition-all duration-200">
                    <span class="material-symbols-outlined">close</span>
                    Vazgeç
                </a>
                <button type="submit"
                        class="inline-flex items-center justify-center gap-2 bg-primary hover:bg-primary-dark text-white font-medium py-3 px-6 rounded-lg transition-all duration-200">
                    <span class="material-symbols-outlined">save</span>
                    Hizmeti Ekle
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    // Icon preview functionality
    document.addEventListener('DOMContentLoaded', function() {
        const iconInput = document.querySelector('input[name="ServiceIcon"]');
        const iconPreview = document.getElementById('iconPreview');
        const previewIcon = document.getElementById('previewIcon');

        if (iconInput) {
            iconInput.addEventListener('input', function() {
                if (this.value.trim()) {
                    iconPreview.classList.remove('hidden');
                    previewIcon.textContent = this.value;
                } else {
                    iconPreview.classList.add('hidden');
                }
            });

            // Trigger on page load if there's already a value
            if (iconInput.value.trim()) {
                iconPreview.classList.remove('hidden');
                previewIcon.textContent = iconInput.value;
            }
        }
    });
</script>