@using HotelRapidApi.EntityLayer.Entities
@model List<AppRole>
@{
    ViewData["Title"] = "Rol Yönetimi";
    ViewData["Description"] = "Sistemdeki tüm rolleri görüntüle ve yönet";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex flex-col space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center justify-between">
       
        <a href="/Admin/Role/AddRole/"
           class="inline-flex items-center justify-center gap-2 bg-primary hover:bg-primary-dark text-white font-medium py-3 px-5 rounded-lg transition-all duration-200 mt-4 sm:mt-0">
            <span class="material-symbols-outlined text-sm">add</span>
            Yeni Rol
        </a>
    </div>

    <!-- Stats Card -->
    <div class="bg-gradient-to-br from-blue-50 to-white dark:from-blue-900/20 dark:to-surface-dark p-5 rounded-xl shadow-card">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-text-sub dark:text-gray-400">Toplam Rol Sayısı</p>
                <h3 class="text-2xl font-bold text-text-main dark:text-white mt-2">@Model.Count</h3>
            </div>
            <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center">
                <span class="material-symbols-outlined text-blue-600 dark:text-blue-400">security</span>
            </div>
        </div>
    </div>

    <!-- Role List -->
    <div class="bg-surface-light dark:bg-surface-dark rounded-2xl shadow-card overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h2 class="text-lg font-semibold text-text-main dark:text-white">Rol Listesi</h2>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-800">
                    <tr>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider w-20">
                            ID
                        </th>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                            Rol Adı
                        </th>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider w-32">
                            İşlemler
                        </th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-text-main dark:text-white">#@item.Id</div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-2">
                                        <span class="material-symbols-outlined text-blue-600 dark:text-blue-400 text-sm">badge</span>
                                        <span class="text-sm font-medium text-text-main dark:text-white">@item.Name</span>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center gap-2">
                                        <a href="/Admin/Role/UpdateRole/@item.Id"
                                           class="inline-flex items-center justify-center gap-1 bg-green-50 hover:bg-green-100 text-green-600 hover:text-green-800 dark:bg-green-900/30 dark:text-green-400 dark:hover:text-green-300 font-medium py-2 px-3 rounded-lg transition-all duration-200"
                                           title="Güncelle">
                                            <span class="material-symbols-outlined text-sm">edit</span>
                                        </a>
                                        <a href="/Admin/Role/DeleteRole/@item.Id"
                                           class="inline-flex items-center justify-center gap-1 bg-red-50 hover:bg-red-100 text-red-600 hover:text-red-800 dark:bg-red-900/30 dark:text-red-400 dark:hover:text-red-300 font-medium py-2 px-3 rounded-lg transition-all duration-200"
                                           title="Sil"
                                           onclick="return confirm('Bu rolü silmek istediğinize emin misiniz?')">
                                            <span class="material-symbols-outlined text-sm">delete</span>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="px-6 py-12 text-center">
                                <div class="flex flex-col items-center justify-center">
                                    <div class="w-16 h-16 bg-gray-100 dark:bg-gray-800 rounded-full flex items-center justify-center mb-4">
                                        <span class="material-symbols-outlined text-gray-400 dark:text-gray-500">security</span>
                                    </div>
                                    <h3 class="text-lg font-medium text-text-main dark:text-white mb-2">Henüz rol bulunmuyor</h3>
                                    <p class="text-text-sub dark:text-gray-400 mb-6">Yeni bir rol eklemek için butona tıklayın</p>
                                    <a href="/Admin/Role/AddRole/"
                                       class="inline-flex items-center gap-2 bg-primary hover:bg-primary-dark text-white font-medium py-2.5 px-5 rounded-lg transition-all duration-200">
                                        <span class="material-symbols-outlined text-sm">add</span>
                                        Yeni Rol Ekle
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>