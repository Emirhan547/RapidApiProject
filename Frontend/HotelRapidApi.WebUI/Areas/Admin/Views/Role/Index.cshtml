@using HotelRapidApi.EntityLayer.Entities

@model List<AppRole>
@{

    ViewData["Title"] = "Roller";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section PageActions
{
    <a href="/Admin/Role/AddRole/" class="btn btn-primary">Yeni Rol</a>
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th>#</th>
                <th>Rol Adı</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-outline-danger btn-sm">Sil</a></td>
                    <td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-outline-success btn-sm">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>