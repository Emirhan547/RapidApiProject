@model List<ResultGuestDto>
@{
    ViewData["Title"] = "Misafir Yönetimi";
    ViewData["Description"] = "Sistemdeki tüm misafirleri görüntüle ve yönet";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="flex flex-col space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-text-main dark:text-white">Misafir Yönetimi</h1>
            <p class="text-text-sub dark:text-gray-400 mt-1">Sistemdeki tüm misafirleri buradan yönetebilirsiniz.</p>
        </div>
        <a href="/Admin/Guest/AddGuest/"
           class="inline-flex items-center justify-center gap-2 bg-primary hover:bg-primary-dark text-white font-medium py-3 px-5 rounded-lg transition-all duration-200 mt-4 sm:mt-0">
            <span class="material-symbols-outlined text-sm">person_add</span>
            Yeni Misafir
        </a>
    </div>

    <!-- Stats Card -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-gradient-to-br from-blue-50 to-white dark:from-blue-900/20 dark:to-surface-dark p-5 rounded-xl shadow-card">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-text-sub dark:text-gray-400">Toplam Misafir</p>
                    <h3 class="text-2xl font-bold text-text-main dark:text-white mt-2">@Model.Count</h3>
                </div>
                <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center">
                    <span class="material-symbols-outlined text-blue-600 dark:text-blue-400">group</span>
                </div>
            </div>
        </div>

        <div class="bg-gradient-to-br from-green-50 to-white dark:from-green-900/20 dark:to-surface-dark p-5 rounded-xl shadow-card">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-text-sub dark:text-gray-400">Farklı Şehir</p>
                    <h3 class="text-2xl font-bold text-text-main dark:text-white mt-2">
                        @(Model.Select(x => x.City).Distinct().Count())
                    </h3>
                </div>
                <div class="w-12 h-12 bg-green-100 dark:bg-green-900/30 rounded-full flex items-center justify-center">
                    <span class="material-symbols-outlined text-green-600 dark:text-green-400">location_city</span>
                </div>
            </div>
        </div>

        <div class="bg-gradient-to-br from-amber-50 to-white dark:from-amber-900/20 dark:to-surface-dark p-5 rounded-xl shadow-card">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-text-sub dark:text-gray-400">Son Eklenen</p>
                    <h3 class="text-2xl font-bold text-text-main dark:text-white mt-2">@DateTime.Now.ToString("dd.MM")</h3>
                </div>
                <div class="w-12 h-12 bg-amber-100 dark:bg-amber-900/30 rounded-full flex items-center justify-center">
                    <span class="material-symbols-outlined text-amber-600 dark:text-amber-400">calendar_month</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Guest List -->
    <div class="bg-surface-light dark:bg-surface-dark rounded-2xl shadow-card overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h2 class="text-lg font-semibold text-text-main dark:text-white">Misafir Listesi</h2>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-800">
                    <tr>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider w-16">
                            #
                        </th>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                            Ad Soyad
                        </th>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                            Şehir
                        </th>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider w-32">
                            İşlemler
                        </th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="w-8 h-8 bg-primary/10 text-primary rounded-lg flex items-center justify-center font-semibold">
                                        @count
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex flex-col">
                                        <span class="text-sm font-medium text-text-main dark:text-white">@item.Name @item.Surname</span>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-2">
                                        <span class="material-symbols-outlined text-gray-400 text-sm">location_on</span>
                                        <span class="text-sm text-text-main dark:text-white">@item.City</span>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center gap-2">
                                        <a href="/Admin/Guest/UpdateGuest/@item.Id"
                                           class="inline-flex items-center justify-center gap-1 bg-green-50 hover:bg-green-100 text-green-600 hover:text-green-800 dark:bg-green-900/30 dark:text-green-400 dark:hover:text-green-300 font-medium py-2 px-3 rounded-lg transition-all duration-200"
                                           title="Güncelle">
                                            <span class="material-symbols-outlined text-sm">edit</span>
                                        </a>
                                        <a href="/Admin/Guest/DeleteGuest/@item.Id"
                                           class="inline-flex items-center justify-center gap-1 bg-red-50 hover:bg-red-100 text-red-600 hover:text-red-800 dark:bg-red-900/30 dark:text-red-400 dark:hover:text-red-300 font-medium py-2 px-3 rounded-lg transition-all duration-200"
                                           title="Sil"
                                           onclick="return confirm('Bu misafiri silmek istediğinize emin misiniz?')">
                                            <span class="material-symbols-outlined text-sm">delete</span>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="px-6 py-12 text-center">
                                <div class="flex flex-col items-center justify-center">
                                    <div class="w-16 h-16 bg-gray-100 dark:bg-gray-800 rounded-full flex items-center justify-center mb-4">
                                        <span class="material-symbols-outlined text-gray-400 dark:text-gray-500">person</span>
                                    </div>
                                    <h3 class="text-lg font-medium text-text-main dark:text-white mb-2">Henüz misafir bulunmuyor</h3>
                                    <p class="text-text-sub dark:text-gray-400 mb-6">Yeni bir misafir eklemek için butona tıklayın</p>
                                    <a href="/Admin/Guest/AddGuest/"
                                       class="inline-flex items-center gap-2 bg-primary hover:bg-primary-dark text-white font-medium py-2.5 px-5 rounded-lg transition-all duration-200">
                                        <span class="material-symbols-outlined text-sm">person_add</span>
                                        Yeni Misafir Ekle
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>