@model List<ResultGuestDto>

@{

    ViewData["Title"] = "Misafirler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
@section PageActions
{
    <a href="/Admin/Guest/AddGuest/" class="btn btn-primary">Yeni Misafir</a>
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th>#</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Şehir</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.City</td>
                    <td><a href="/Admin/Guest/DeleteGuest/@item.Id" class="btn btn-outline-danger btn-sm">Sil</a></td>
                    <td><a href="/Admin/Guest/UpdateGuest/@item.Id" class="btn btn-outline-success btn-sm">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>