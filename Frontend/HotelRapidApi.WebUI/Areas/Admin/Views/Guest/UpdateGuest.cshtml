@model UpdateGuestDto

@{
    ViewData["Title"] = "Misafir Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="Id" />
   
    <div class="form-group mb-3">
        <label>Misafir Adı</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label>Misafir Soyadı</label>
        <input type="text" asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <label>Misafir Şehir</label>
        <input type="text" asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <button class="btn btn-primary">Misafiri Güncelle</button>
    <a href="/Admin/Guest/Index" class="btn btn-outline-secondary ml-2">Vazgeç</a>
</form>