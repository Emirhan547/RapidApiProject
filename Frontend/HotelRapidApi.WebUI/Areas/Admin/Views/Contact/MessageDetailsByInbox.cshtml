@using HotelRapidApi.DtoLayer.DTOs.ContactMessageDtos
@model ResultContactMessageDto
@{
    ViewData["Title"] = "Mesaj Detayları";
    ViewData["Description"] = "Gelen mesaj detaylarını görüntüle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex flex-col space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-text-main dark:text-white">Mesaj Detayları</h1>
            <p class="text-text-sub dark:text-gray-400 mt-1">Gelen mesajın detaylarını görüntülüyorsunuz.</p>
        </div>
        <div class="flex items-center gap-3 mt-4 sm:mt-0">
            <a href="/Admin/Contact/Inbox/"
               class="inline-flex items-center justify-center gap-2 border border-gray-300 dark:border-gray-600 hover:border-gray-400 dark:hover:border-gray-500 text-text-main dark:text-gray-300 hover:text-text-main dark:hover:text-white font-medium py-2.5 px-4 rounded-lg transition-all duration-200">
                <span class="material-symbols-outlined text-sm">arrow_back</span>
                Listeye Dön
            </a>
            <a href="/Admin/Contact/SendMessage/"
               class="inline-flex items-center justify-center gap-2 bg-primary hover:bg-primary-dark text-white font-medium py-2.5 px-4 rounded-lg transition-all duration-200">
                <span class="material-symbols-outlined text-sm">reply</span>
                Yanıtla
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
        <!-- Sidebar -->
        <div class="lg:col-span-1">
            <div class="bg-surface-light dark:bg-surface-dark rounded-2xl shadow-card p-5">
                <!-- Sender Info -->
                <div class="mb-6">
                    <h3 class="text-sm font-semibold text-text-main dark:text-white mb-3 uppercase tracking-wider">Gönderen</h3>
                    <div class="flex items-center gap-3 p-3 bg-gray-50 dark:bg-gray-800 rounded-lg">
                        <div class="w-10 h-10 bg-gradient-to-br from-blue-100 to-blue-50 dark:from-blue-900/30 dark:to-blue-800/10 rounded-full flex items-center justify-center">
                            <span class="material-symbols-outlined text-blue-600 dark:text-blue-400">person</span>
                        </div>
                        <div>
                            <div class="font-medium text-text-main dark:text-white">@Model.Name</div>
                            <div class="text-xs text-text-sub dark:text-gray-400">@Model.Mail</div>
                        </div>
                    </div>
                </div>

                <!-- Message Actions -->
                <div class="space-y-2 mb-6">
                    <h3 class="text-sm font-semibold text-text-main dark:text-white mb-3 uppercase tracking-wider">İşlemler</h3>
                    <button class="w-full flex items-center gap-2 p-3 rounded-lg text-blue-600 hover:bg-blue-50 dark:text-blue-400 dark:hover:bg-blue-900/20 transition-all duration-200">
                        <span class="material-symbols-outlined">reply</span>
                        Yanıtla
                    </button>
                    <button class="w-full flex items-center gap-2 p-3 rounded-lg text-amber-600 hover:bg-amber-50 dark:text-amber-400 dark:hover:bg-amber-900/20 transition-all duration-200">
                        <span class="material-symbols-outlined">forward</span>
                        İlet
                    </button>
                    <button class="w-full flex items-center gap-2 p-3 rounded-lg text-red-600 hover:bg-red-50 dark:text-red-400 dark:hover:bg-red-900/20 transition-all duration-200">
                        <span class="material-symbols-outlined">delete</span>
                        Sil
                    </button>
                    <button class="w-full flex items-center gap-2 p-3 rounded-lg text-purple-600 hover:bg-purple-50 dark:text-purple-400 dark:hover:bg-purple-900/20 transition-all duration-200">
                        <span class="material-symbols-outlined">star</span>
                        Önemli Olarak İşaretle
                    </button>
                </div>

                <!-- Message Info -->
                <div>
                    <h3 class="text-sm font-semibold text-text-main dark:text-white mb-3 uppercase tracking-wider">Mesaj Bilgileri</h3>
                    <div class="space-y-3 text-sm">
                        <div class="flex justify-between">
                            <span class="text-text-sub dark:text-gray-400">Gönderilme Tarihi:</span>
                            <span class="font-medium text-text-main dark:text-white">@(((DateTime)Model.Date).ToString("dd.MM.yyyy HH:mm"))</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-text-sub dark:text-gray-400">Mesaj ID:</span>
                            <span class="font-medium text-text-main dark:text-white">#@Model.Id</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-text-sub dark:text-gray-400">Durum:</span>
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400">
                                Okundu
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Message Content -->
        <div class="lg:col-span-3">
            <div class="bg-surface-light dark:bg-surface-dark rounded-2xl shadow-card overflow-hidden">
                <!-- Message Header -->
                <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                    <div class="flex flex-col sm:flex-row sm:items-start justify-between gap-4">
                        <div>
                            <h2 class="text-xl font-bold text-text-main dark:text-white mb-2">@Model.Subject</h2>
                            <div class="flex items-center gap-3 text-sm">
                                <div class="flex items-center gap-2">
                                    <span class="material-symbols-outlined text-gray-400 text-sm">person</span>
                                    <span class="text-text-main dark:text-white">@Model.Name</span>
                                </div>
                                <span class="text-text-sub dark:text-gray-400">•</span>
                                <div class="flex items-center gap-2">
                                    <span class="material-symbols-outlined text-gray-400 text-sm">mail</span>
                                    <span class="text-text-main dark:text-white">@Model.Mail</span>
                                </div>
                            </div>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="text-sm text-text-sub dark:text-gray-400">
                                @(((DateTime)Model.Date).ToString("dd.MM.yyyy HH:mm"))
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Message Body -->
                <div class="p-6">
                    <div class="prose dark:prose-invert max-w-none">
                        <div class="whitespace-pre-line text-text-main dark:text-gray-300 leading-relaxed">
                            @Model.Message
                        </div>
                    </div>
                </div>

                <!-- Reply Section -->
                <div class="p-6 border-t border-gray-200 dark:border-gray-700">
                    <h3 class="text-lg font-semibold text-text-main dark:text-white mb-4">Yanıtla</h3>
                    <form method="post" action="/Admin/Contact/SendMessage/">
                        <div class="space-y-4">
                            <input type="hidden" name="ReceiverMail" value="@Model.Mail" />
                            <input type="hidden" name="ReceiverName" value="@Model.Name" />
                            <input type="text" name="Title"
                                   class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-text-main dark:text-white focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none transition-all duration-200"
                                   value="Re: @Model.Subject"
                                   placeholder="Konu" />

                            <textarea name="Content" rows="6"
                                      class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-text-main dark:text-white focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none transition-all duration-200 resize-none"
                                      placeholder="Yanıtınızı buraya yazın..."></textarea>

                            <div class="flex items-center justify-between">
                                <div class="flex items-center gap-2">
                                    <button type="button" class="p-2 text-gray-500 hover:text-primary rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800">
                                        <span class="material-symbols-outlined">attach_file</span>
                                    </button>
                                    <button type="button" class="p-2 text-gray-500 hover:text-primary rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800">
                                        <span class="material-symbols-outlined">insert_photo</span>
                                    </button>
                                </div>
                                <div class="flex items-center gap-3">
                                    <button type="button"
                                            class="inline-flex items-center justify-center gap-2 border border-gray-300 dark:border-gray-600 hover:border-gray-400 dark:hover:border-gray-500 text-text-main dark:text-gray-300 hover:text-text-main dark:hover:text-white font-medium py-2.5 px-5 rounded-lg transition-all duration-200">
                                        <span class="material-symbols-outlined">close</span>
                                        İptal
                                    </button>
                                    <button type="submit"
                                            class="inline-flex items-center justify-center gap-2 bg-primary hover:bg-primary-dark text-white font-medium py-2.5 px-5 rounded-lg transition-all duration-200">
                                        <span class="material-symbols-outlined">send</span>
                                        Gönder
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>