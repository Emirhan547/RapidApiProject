@{
    ViewData["Title"] = "Görsel Yükle";
    ViewData["Description"] = "Sisteme görsel dosyası yükleyin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex flex-col space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center justify-between">
       
    </div>

    <!-- Upload Form -->
    <div class="max-w-2xl mx-auto">
        <div class="bg-surface-light dark:bg-surface-dark rounded-2xl shadow p-6">
            <div class="flex items-center gap-3 mb-6 pb-4 border-b border-gray-200 dark:border-gray-700">
                <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
                    <span class="material-symbols-outlined text-primary">image</span>
                </div>
                <div>
                    <h2 class="text-lg font-semibold text-text-main dark:text-white">Görsel Yükleme</h2>
                    <p class="text-sm text-text-sub dark:text-gray-400">PNG, JPG, JPEG, WEBP formatları desteklenir</p>
                </div>
            </div>

            <form method="post" enctype="multipart/form-data" class="space-y-6">
                <!-- File Upload -->
                <div class="border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-xl p-8 text-center hover:border-primary transition-colors duration-300">
                    <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
                        <span class="material-symbols-outlined text-primary text-2xl">cloud_upload</span>
                    </div>

                    <h3 class="text-base font-semibold text-text-main dark:text-white mb-2">Görsel Seçin</h3>
                    <p class="text-sm text-text-sub dark:text-gray-400 mb-4">Maksimum dosya boyutu: 10MB</p>

                    <div class="relative">
                        <input type="file" name="file"
                               class="absolute inset-0 w-full h-full opacity-0 cursor-pointer"
                               accept=".png,.jpg,.jpeg,.webp"
                               required />

                        <button type="button"
                                class="inline-flex items-center justify-center gap-2 bg-primary hover:bg-primary-dark text-white font-medium py-2.5 px-5 rounded-lg transition-all duration-200">
                            <span class="material-symbols-outlined text-sm">folder_open</span>
                            Dosya Seç
                        </button>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="flex items-center justify-end gap-3 pt-6 border-t border-gray-200 dark:border-gray-700">
                    <a href="/Admin/Dashboard/Index"
                       class="inline-flex items-center justify-center gap-2 border border-gray-300 dark:border-gray-600 hover:border-gray-400 dark:hover:border-gray-500 text-text-main dark:text-gray-300 hover:text-text-main dark:hover:text-white font-medium py-2.5 px-5 rounded-lg transition-all duration-200">
                        <span class="material-symbols-outlined text-sm">close</span>
                        İptal
                    </a>
                    <button type="submit"
                            class="inline-flex items-center justify-center gap-2 bg-primary hover:bg-primary-dark text-white font-medium py-2.5 px-5 rounded-lg transition-all duration-200">
                        <span class="material-symbols-outlined text-sm">upload</span>
                        Yükle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>