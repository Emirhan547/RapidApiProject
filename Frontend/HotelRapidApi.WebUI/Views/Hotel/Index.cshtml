@using HotelRapidApi.WebUI.Models
@model HotelListViewModel

@{
    ViewData["Title"] = "Tüm Oteller";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<!-- PAGE HEADER -->
<div class="container-fluid page-header mb-5 p-0"
     style="background-image: url('/hotel-theme/img/carousel-1.jpg');">
    <div class="container-fluid page-header-inner py-5">
        <div class="container text-center">
            <h1 class="display-4 text-white mb-3">Tüm Oteller</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center text-uppercase">
                    <li class="breadcrumb-item">
                        <a asp-controller="Default" asp-action="Index">Ana Sayfa</a>
                    </li>
                    <li class="breadcrumb-item active text-white" aria-current="page">
                        Otel Listesi
                    </li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="container-xxl py-5">
    <div class="container">

        <!-- TOP BAR -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="h5 mb-0">
                <span class="text-primary fw-bold">@Model.TotalCount</span> sonuç bulundu
            </h2>

            <button class="btn btn-outline-primary d-lg-none"
                    data-bs-toggle="offcanvas"
                    data-bs-target="#filterSidebar">
                <i class="fa fa-filter me-1"></i> Filtrele
            </button>
        </div>

        <div class="row">

            <!-- FILTER COLUMN -->
            <div class="col-lg-3 d-none d-lg-block">
                <div class="filter-sticky">

                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-primary text-white py-3">
                            <h6 class="mb-0">
                                <i class="fa fa-filter me-2"></i>Filtrele
                            </h6>
                        </div>

                        <div class="card-body">
                            <form method="get">

                                <div class="mb-3">
                                    <label class="form-label small fw-semibold">Otel Adı</label>
                                    <input type="text"
                                           class="form-control form-control-sm"
                                           name="searchTerm"
                                           value="@Model.SearchTerm"
                                           placeholder="Otel adı..." />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label small fw-semibold">Puan</label>
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <input type="number" step="0.1"
                                                   class="form-control form-control-sm"
                                                   name="minScore"
                                                   value="@Model.MinScore"
                                                   placeholder="Min" />
                                        </div>
                                        <div class="col-6">
                                            <input type="number" step="0.1"
                                                   class="form-control form-control-sm"
                                                   name="maxScore"
                                                   value="@Model.MaxScore"
                                                   placeholder="Max" />
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label small fw-semibold">Yorum Sayısı</label>
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <input type="number"
                                                   class="form-control form-control-sm"
                                                   name="minReviewCount"
                                                   value="@Model.MinReviewCount"
                                                   placeholder="Min" />
                                        </div>
                                        <div class="col-6">
                                            <input type="number"
                                                   class="form-control form-control-sm"
                                                   name="maxReviewCount"
                                                   value="@Model.MaxReviewCount"
                                                   placeholder="Max" />
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label small fw-semibold">Para Birimi</label>
                                    <select class="form-select form-select-sm" name="currency">
                                        <option value="">Tümü</option>
                                        @foreach (var c in Model.AvailableCurrencies)
                                        {
                                            <option value="@c" selected="@(c == Model.Currency)">
                                                @c
                                            </option>
                                        }
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label small fw-semibold">Tarih</label>
                                    <input type="date" class="form-control form-control-sm mb-2"
                                           name="checkinFrom"
                                           value="@(Model.CheckinFrom?.ToString("yyyy-MM-dd"))" />
                                    <input type="date" class="form-control form-control-sm"
                                           name="checkoutTo"
                                           value="@(Model.CheckoutTo?.ToString("yyyy-MM-dd"))" />
                                </div>

                                <div class="d-grid gap-2 mt-3">
                                    <button class="btn btn-primary btn-sm">
                                        Filtrele
                                    </button>
                                    <a asp-action="Index"
                                       class="btn btn-outline-secondary btn-sm">
                                        Temizle
                                    </a>
                                </div>

                            </form>
                        </div>
                    </div>

                    <div class="card border-0 shadow-sm">
                        <div class="card-body small text-muted">
                            <i class="fa fa-info-circle text-primary me-2"></i>
                            Filtreler yalnızca RapidAPI sonuçlarını etkiler.
                        </div>
                    </div>

                </div>
            </div>

            <!-- CONTENT COLUMN -->
            <div class="col-lg-9">

                @if (Model.Rooms?.Any() == true)
                {
                    <h4 class="text-primary mb-3">
                        <i class="fa fa-home me-2"></i>Sitemizdeki Odalar
                    </h4>

                    <div class="row g-4 mb-5">
                        @foreach (var room in Model.Rooms)
                        {
                            <div class="col-xl-4 col-lg-6 col-md-6">
                                <div class="card border-0 shadow-sm h-100">
                                    <img src="@room.RoomCoverImage"
                                         class="card-img-top"
                                         style="height:220px; object-fit:cover;" />

                                    <div class="card-body d-flex flex-column">
                                        <h6 class="fw-bold">@room.Title</h6>

                                        <p class="small text-muted flex-grow-1">
                                            @room.Description
                                        </p>

                                        <div class="d-flex gap-2">
                                            <a href="/Hotel/Detail"
                                               class="btn btn-outline-primary btn-sm flex-fill">
                                                Detay
                                            </a>
                                            <a href="/Booking/Create"
                                               class="btn btn-primary btn-sm flex-fill">
                                                Rezervasyon
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }

                <hr class="my-5">

                <h4 class="text-primary mb-3">
                    <i class="fa fa-globe me-2"></i>RapidAPI Otelleri
                </h4>

                @if (Model.Hotels?.Any() == true)
                {
                    <div class="row g-4">
                        @foreach (var hotel in Model.Hotels)
                        {
                            <div class="col-xl-4 col-lg-6 col-md-6">
                                <div class="card border-0 shadow-sm h-100">
                                    <img src="@hotel.ImageUrl"
                                         class="card-img-top"
                                         style="height:220px; object-fit:cover;" />

                                    <div class="card-body d-flex flex-column">
                                        <h6 class="fw-bold">@hotel.Name</h6>

                                        <div class="small text-muted mb-3">
                                            <i class="fa fa-star text-warning me-1"></i>
                                            @hotel.ReviewScore
                                        </div>

                                        <a asp-action="Detail"
                                           asp-route-id="@hotel.HotelId"
                                           class="btn btn-primary btn-sm mt-auto">
                                            Detayları Gör
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fa fa-search fa-3x text-muted mb-3"></i>
                        <p class="text-muted">Sonuç bulunamadı</p>
                        <a asp-action="Index" class="btn btn-primary btn-sm">
                            Filtreleri Temizle
                        </a>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
