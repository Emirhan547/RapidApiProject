@{
    Layout = null;
}

<!DOCTYPE html>
<html class="light" lang="tr">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Hotelier Admin Dashboard</title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#fea116",
                        "primary-dark": "#e68a00",
                        "secondary": "#0f172b",
                        "background-light": "#f1f8ff",
                        "background-dark": "#1e293b",
                        "surface-light": "#ffffff",
                        "surface-dark": "#2a3649",
                        "text-main": "#0f172b",
                        "text-sub": "#666565",
                        "success": "#10b981",
                        "warning": "#f59e0b",
                        "danger": "#ef4444",
                        "info": "#3b82f6"
                    },
                    fontFamily: {
                        "display": ["Plus Jakarta Sans", "sans-serif"],
                        "body": ["Plus Jakarta Sans", "sans-serif"],
                    },
                    borderRadius: {
                        "DEFAULT": "0.75rem",
                        "lg": "1rem",
                        "xl": "1.25rem",
                        "full": "9999px"
                    },
                    boxShadow: {
                        'card': '0 4px 20px rgba(0, 0, 0, 0.08)',
                        'card-hover': '0 8px 30px rgba(0, 0, 0, 0.12)',
                        'soft': '0 2px 15px rgba(0, 0, 0, 0.05)',
                    }
                },
            },
        }
    </script>
    <style>
        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
        }

        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }

        .sidebar-active {
            background: linear-gradient(90deg, rgba(254, 161, 22, 0.15) 0%, transparent 100%);
            color: #fea116 !important;
            border-left: 3px solid #fea116;
        }

        .custom-scrollbar::-webkit-scrollbar {
            width: 6px;
        }

        .custom-scrollbar::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.02);
        }

        .custom-scrollbar::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
        }

            .custom-scrollbar::-webkit-scrollbar-thumb:hover {
                background: rgba(255, 255, 255, 0.2);
            }

        .stat-card {
            transition: all 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15) !important;
            }

        .form-control {
            transition: all 0.2s ease;
            border: 2px solid #e5e7eb;
        }

            .form-control:focus {
                border-color: #fea116;
                box-shadow: 0 0 0 3px rgba(254, 161, 22, 0.1);
            }

        .btn {
            transition: all 0.2s ease;
        }

            .btn:hover {
                transform: translateY(-2px);
            }

        .badge {
            padding: 0.35rem 0.75rem;
            font-weight: 500;
            border-radius: 50px;
        }
    </style>
</head>
<!-- Body kısmı aynı kalacak -->
<body class="bg-background-light dark:bg-background-dark text-text-main dark:text-white flex min-h-screen overflow-hidden">
    <aside class="w-64 bg-secondary flex flex-col h-screen fixed left-0 top-0 z-50 text-white shadow-xl transition-all duration-300">
        <div class="h-20 flex items-center px-8 border-b border-gray-700/50">
            <div class="bg-primary rounded-lg p-1.5 mr-3">
                <span class="material-symbols-outlined text-white text-xl">hotel</span>
            </div>
            <div>
                <h1 class="text-xl font-bold leading-none tracking-wide text-white">Hotelier</h1>
                <p class="text-xs text-gray-400 mt-1 uppercase tracking-wider font-medium">Admin Panel</p>
            </div>
        </div>
        <nav class="flex-1 py-6 px-4 space-y-2 overflow-y-auto custom-scrollbar">
            <p class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2 mt-2">
                Ana Menü
            </p>

            <a class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 text-sm font-medium transition-colors hover:bg-gray-800 hover:text-primary" href="/Default/Index/">
                <span class="material-symbols-outlined">public</span>
                Siteye Git
            </a>

            <a class="sidebar-active flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-medium transition-colors hover:bg-gray-800" href="/Admin/Dashboard/Index/">
                <span class="material-symbols-outlined">dashboard</span>
                Dashboard
            </a>

            <a class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 text-sm font-medium transition-colors hover:bg-gray-800 hover:text-primary" href="/Admin/Booking/Index/">
                <span class="material-symbols-outlined">calendar_month</span>
                Rezervasyonlar
            </a>

            <a class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 text-sm font-medium transition-colors hover:bg-gray-800 hover:text-primary" href="/Admin/Staff/Index/">
                <span class="material-symbols-outlined">groups</span>
                Personeller
            </a>

            <p class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2 mt-6">
                Kurumsal
            </p>

            <a class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 text-sm font-medium transition-colors hover:bg-gray-800 hover:text-primary" href="/Admin/Testimonial/Index/">
                <span class="material-symbols-outlined">recommend</span>
                Referanslar
            </a>

            <a class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 text-sm font-medium transition-colors hover:bg-gray-800 hover:text-primary" href="/Admin/Service/Index/">
                <span class="material-symbols-outlined">handyman</span>
                Hizmetler
            </a>

            <a class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 text-sm font-medium transition-colors hover:bg-gray-800 hover:text-primary" href="/Admin/About/Index/">
                <span class="material-symbols-outlined">info</span>
                Hakkımızda
            </a>

            <p class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2 mt-6">
                Otel Yönetimi
            </p>

            <a class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 text-sm font-medium transition-colors hover:bg-gray-800 hover:text-primary" href="/Admin/Room/Index/">
                <span class="material-symbols-outlined">king_bed</span>
                Odalar
            </a>

            <a class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 text-sm font-medium transition-colors hover:bg-gray-800 hover:text-primary" href="/Admin/Guest/Index/">
                <span class="material-symbols-outlined">person</span>
                Misafirler
            </a>

            <p class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2 mt-6">
                İletişim
            </p>

            <a class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 text-sm font-medium transition-colors hover:bg-gray-800 hover:text-primary" href="/Admin/Contact/Inbox/">
                <span class="material-symbols-outlined">chat</span>
                Mesajlar
            </a>

            <a class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 text-sm font-medium transition-colors hover:bg-gray-800 hover:text-primary" href="/Admin/Mail/Index/">
                <span class="material-symbols-outlined">mail</span>
                Mail İşlemleri
            </a>

            <p class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2 mt-6">
                Medya
            </p>

            <a class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 text-sm font-medium transition-colors hover:bg-gray-800 hover:text-primary" href="/Admin/ImageFile/Index/">
                <span class="material-symbols-outlined">image</span>
                Resim İşlemleri
            </a>

            <a class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 text-sm font-medium transition-colors hover:bg-gray-800 hover:text-primary" href="/Admin/File/Index/">
                <span class="material-symbols-outlined">folder</span>
                Dosya İşlemleri
            </a>

            <p class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2 mt-6">
                Yetkilendirme
            </p>

            <a class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 text-sm font-medium transition-colors hover:bg-gray-800 hover:text-primary" href="/Admin/User/UserList/">
                <span class="material-symbols-outlined">person_outline</span>
                Kullanıcılar
            </a>

            <a class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 text-sm font-medium transition-colors hover:bg-gray-800 hover:text-primary" href="/Admin/WorkLocation/Index/">
                <span class="material-symbols-outlined">location_on</span>
                Otel Lokasyonları
            </a>

            <a class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 text-sm font-medium transition-colors hover:bg-gray-800 hover:text-primary" href="/Admin/Role/Index/">
                <span class="material-symbols-outlined">security</span>
                Roller
            </a>

            <a class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 text-sm font-medium transition-colors hover:bg-gray-800 hover:text-primary" href="/Admin/RoleAssign/Index/">
                <span class="material-symbols-outlined">admin_panel_settings</span>
                Rol Atamaları
            </a>

            <div class="mt-auto pt-10 pb-6 space-y-2">
                <a class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 text-sm font-medium transition-colors hover:bg-gray-800 hover:text-primary" href="/Admin/Settings/Index/">
                    <span class="material-symbols-outlined">settings</span>
                    Ayarlar
                </a>

                <a class="flex items-center gap-3 px-4 py-3 rounded-lg text-red-400 text-sm font-medium transition-colors hover:bg-red-500/10 hover:text-red-500" href="Login/Index/">
                    <span class="material-symbols-outlined">logout</span>
                    Çıkış Yap
                </a>
            </div>
        </nav>

        <div class="p-4 border-t border-gray-700/50">
            <div class="flex items-center gap-3 px-2">
                <div class="w-8 h-8 rounded-full bg-primary flex items-center justify-center text-white text-xs font-bold">JD</div>
                <div class="flex flex-col">
                    <span class="text-sm font-medium text-white">Emirhan Hacıoğlu</span>
                    <span class="text-xs text-gray-400">Admin Manager</span>
                </div>
            </div>
        </div>
    </aside>
    <main class="ml-64 flex-1 flex flex-col h-full overflow-hidden">
        <header class="h-20 bg-surface-light dark:bg-surface-dark shadow-sm border-b border-gray-200 dark:border-gray-700 flex items-center justify-between px-8 z-40 sticky top-0">
            <div class="flex flex-col">
                <h2 class="text-2xl font-bold text-text-main dark:text-white">@ViewData["Title"]</h2>
                <p class="text-sm text-text-sub dark:text-gray-400">@ViewData["Description"]</p>
            </div>
            <div class="flex items-center gap-6">
                <div class="relative hidden md:block group">
                    <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-primary transition-colors">search</span>
                    <input class="pl-10 pr-4 py-2.5 w-64 rounded-full bg-gray-100 dark:bg-gray-800 border-none focus:ring-2 focus:ring-primary/50 text-sm text-text-main dark:text-gray-200 placeholder-gray-400 transition-all" placeholder="Search for bookings, rooms..." type="text" />
                </div>
                <button class="relative p-2 text-gray-500 hover:text-primary transition-colors rounded-full hover:bg-gray-100 dark:hover:bg-gray-800">
                    <span class="material-symbols-outlined">notifications</span>
                    <span class="absolute top-1.5 right-2 w-2 h-2 bg-red-500 rounded-full border border-white"></span>
                </button>
                <button class="relative p-2 text-gray-500 hover:text-primary transition-colors rounded-full hover:bg-gray-100 dark:hover:bg-gray-800">
                    <span class="material-symbols-outlined">mail</span>
                    <span class="absolute top-1.5 right-1.5 w-2 h-2 bg-primary rounded-full border border-white"></span>
                </button>
                <div class="flex items-center gap-3 pl-6 border-l border-gray-200 dark:border-gray-700 cursor-pointer">
                    <div class="w-10 h-10 rounded-full bg-gray-300 bg-cover bg-center border-2 border-white shadow-sm" data-alt="Portrait of a smiling professional man in a suit" style="background-image: url('https://lh3.googleusercontent.com/aida-public/AB6AXuBp5fuuUdk2kCur9tuIE5SgMvskcxNXQlFwDC_AWGrX3JfCxthQRgzWuhUz4-_lL_K2LZijM6-mYeBaHEUc6bwV5y7q2bMk0oR9gdewYcbL2YQE6nWIA0w-woRdwUIdKbIozfK0eyi7FaET6OHvy8t2aA8r_lnUdnrpKV2GL4ozH2L_cZlFCJ8m5TlfPuDVx04HgVE7ACkzyVE2zs4-SF40fiQm0gb4Z3MGTe3yFy6PKU-0IEyXvsSuVOUpY2nuPJIKaJj09pX1aZM');"></div>
                    <div class="hidden lg:block text-right">
                        <p class="text-sm font-bold text-text-main dark:text-white leading-tight">Emirhan Hacıoğlu</p>
                        <p class="text-xs text-text-sub dark:text-gray-400">Genel Ayarlar</p>
                    </div>
                    <span class="material-symbols-outlined text-gray-400 text-sm">expand_more</span>
                </div>
            </div>
        </header>
        <div class="flex-1 overflow-y-auto bg-background-light dark:bg-background-dark p-8">
            @RenderBody()
        </div>
    </main>
</body>
</html>