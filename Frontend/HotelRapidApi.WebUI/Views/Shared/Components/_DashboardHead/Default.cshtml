<!-- Dashboard Özel CSS -->
<style>
    .dashboard-stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: linear-gradient(135deg, var(--card-gradient-1) 0%, var(--card-gradient-2) 100%);
        border-radius: 1rem;
        padding: 1.5rem;
        color: white;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
        }

    .stat-icon {
        width: 3rem;
        height: 3rem;
        background: rgba(255,255,255,0.2);
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        line-height: 1;
        margin-bottom: 0.25rem;
    }

    .stat-label {
        font-size: 0.875rem;
        opacity: 0.9;
    }

    .stat-trend {
        font-size: 0.75rem;
        margin-top: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    .trend-up {
        color: #10b981;
    }

    .trend-down {
        color: #ef4444;
    }

    /* Dark mode için renk değişkenleri */
    .dark-mode .stat-card {
        box-shadow: 0 10px 20px rgba(0,0,0,0.3);
    }

    /* Quick actions */
    .quick-actions {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
        margin-top: 1rem;
    }

    .quick-action-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: var(--surface-light);
        color: var(--text-main);
        padding: 0.75rem 1rem;
        border-radius: 0.75rem;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.2s ease;
        border: 1px solid var(--border-color);
    }

    .dark-mode .quick-action-btn {
        background: var(--surface-dark);
        color: var(--text-white);
        border-color: var(--border-dark);
    }

    .quick-action-btn:hover {
        background: var(--primary);
        color: white;
        border-color: var(--primary);
        transform: translateY(-2px);
    }

    /* Charts */
    .chart-container {
        background: var(--surface-light);
        border-radius: 1rem;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .dark-mode .chart-container {
        background: var(--surface-dark);
    }

    .chart-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--text-main);
        margin-bottom: 1rem;
    }

    .dark-mode .chart-title {
        color: var(--text-white);
    }

    /* Recent activity */
    .activity-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        border-bottom: 1px solid var(--border-color);
    }

    .dark-mode .activity-item {
        border-color: var(--border-dark);
    }

    .activity-icon {
        width: 2.5rem;
        height: 2.5rem;
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
    }

    .activity-content {
        flex: 1;
    }

    .activity-title {
        font-weight: 500;
        color: var(--text-main);
        margin-bottom: 0.25rem;
    }

    .dark-mode .activity-title {
        color: var(--text-white);
    }

    .activity-time {
        font-size: 0.875rem;
        color: var(--text-sub);
    }

   
    
</style>

<!-- Dashboard Özel JavaScript -->
<script>
    // Dashboard başlangıç değerleri
    document.addEventListener('DOMContentLoaded', function() {
        // Dashboard renk değişkenleri
        const style = document.documentElement.style;
        style.setProperty('--card-gradient-1', '#667eea');
        style.setProperty('--card-gradient-2', '#764ba2');

        // Quick actions için dinamik içerik
        const quickActionsData = [
            { icon: 'add', label: 'Yeni Rezervasyon', url: '/Admin/Booking/AddBooking', color: 'bg-gradient-to-r from-green-500 to-emerald-600' },
            { icon: 'person_add', label: 'Yeni Personel', url: '/Admin/Staff/AddStaff', color: 'bg-gradient-to-r from-blue-500 to-blue-600' },
            { icon: 'add', label: 'Yeni Oda', url: '/Admin/Room/AddRoom', color: 'bg-gradient-to-r from-purple-500 to-purple-600' },
            { icon: 'mail', label: 'Mesajlar', url: '/Admin/Contact/Inbox', color: 'bg-gradient-to-r from-orange-500 to-orange-600' },
            { icon: 'assessment', label: 'Raporlar', url: '/Admin/Reports', color: 'bg-gradient-to-r from-cyan-500 to-cyan-600' }
        ];

        // Quick actions container'ı doldur
        const quickActionsContainer = document.getElementById('quickActionsContainer');
        if (quickActionsContainer) {
            quickActionsData.forEach(action => {
                const actionElement = document.createElement('a');
                actionElement.href = action.url;
                actionElement.className = `flex items-center gap-2 ${action.color} text-white font-medium py-2 px-4 rounded-lg transition-all duration-200 hover:opacity-90`;
                actionElement.innerHTML = `
                    <span class="material-symbols-outlined text-sm">${action.icon}</span>
                    <span>${action.label}</span>
                `;
                quickActionsContainer.appendChild(actionElement);
            });
        }

        // Dashboard stat güncelleme fonksiyonu
        function updateDashboardStats() {
            // Bu kısım API'den veri çekecek şekilde güncellenebilir
            console.log('Dashboard stats updated');
        }

        // 5 dakikada bir güncelle
        setInterval(updateDashboardStats, 300000);

        // Sayfa yüklendiğinde bir kere çalıştır
        updateDashboardStats();
    });
</script>