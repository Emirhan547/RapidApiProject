@using HotelRapidApi.WebUI.DTOs.StaffDtos
@model List<ResultLast4StaffDto>

@if (Model != null && Model.Any())
{
    @foreach (var item in Model)
    {
        <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-4">
            <div class="flex items-center gap-3">
                @if (!string.IsNullOrEmpty(item.SocialMedia1))
                {
                    <img src="@item.SocialMedia1"
                         class="w-12 h-12 rounded-full object-cover border-2 border-white dark:border-gray-700"
                         alt="@item.Name">
                }
                else
                {
                    <div class="w-12 h-12 bg-blue-50 dark:bg-blue-900/30 rounded-full flex items-center justify-center">
                        <span class="material-symbols-outlined text-blue-600 dark:text-blue-400">
                            person
                        </span>
                    </div>
                }
                <div class="flex-1">
                    <h4 class="font-medium text-text-main dark:text-white">@item.Name</h4>
                    <p class="text-sm text-text-sub dark:text-gray-400">@item.Title</p>
                </div>
                <div class="text-right">
                    <span class="text-xs text-text-sub dark:text-gray-400">Yeni</span>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="col-span-2 bg-gray-50 dark:bg-gray-800 rounded-xl p-6 text-center">
        <div class="w-12 h-12 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center mx-auto mb-3">
            <span class="material-symbols-outlined text-gray-400 dark:text-gray-500">
                group
            </span>
        </div>
        <p class="text-text-sub dark:text-gray-400">Henüz personel eklenmemiş</p>
    </div>
}