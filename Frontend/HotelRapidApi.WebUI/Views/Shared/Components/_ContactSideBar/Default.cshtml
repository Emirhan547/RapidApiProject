<div class="space-y-3 mb-6">
    <a href="/Admin/Contact/Inbox/"
       class="flex items-center justify-between p-3 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-all duration-200 @(ViewContext.RouteData.Values["action"].ToString() == "Inbox" ? "bg-primary/10 text-primary" : "text-text-main dark:text-gray-300")">
        <div class="flex items-center gap-3">
            <span class="material-symbols-outlined">inbox</span>
            <span class="font-medium">Gelen Kutusu</span>
        </div>
        <span class="bg-primary text-white text-xs font-bold px-2 py-1 rounded-full">@ViewBag.contactCount</span>
    </a>

    <a href="/Admin/Contact/Sendbox/"
       class="flex items-center justify-between p-3 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-all duration-200 @(ViewContext.RouteData.Values["action"].ToString() == "Sendbox" ? "bg-primary/10 text-primary" : "text-text-main dark:text-gray-300")">
        <div class="flex items-center gap-3">
            <span class="material-symbols-outlined">send</span>
            <span class="font-medium">Giden Kutusu</span>
        </div>
        <span class="bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400 text-xs font-bold px-2 py-1 rounded-full">@ViewBag.sendMessageCount</span>
    </a>

    <a href="#"
       class="flex items-center justify-between p-3 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-all duration-200 text-text-main dark:text-gray-300">
        <div class="flex items-center gap-3">
            <span class="material-symbols-outlined">star</span>
            <span class="font-medium">Önemli</span>
        </div>
        <span class="bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400 text-xs font-bold px-2 py-1 rounded-full">50</span>
    </a>
</div>