@using HotelRapidApi.WebUI.DTOs.RoomDtos
@model ResultRoomDto
@{
    ViewData["Title"] = "Oda Detayı";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<div class="container-xxl py-5">
    <div class="container">
        @if (Model == null || Model.Id == 0)
        {
            <div class="alert alert-warning text-center">
                @ViewBag.ErrorMessage
            </div>
        }
        else
        {
            <div class="row g-5 align-items-start">
                <div class="col-lg-7">
                    <div class="position-relative shadow-sm rounded-3 overflow-hidden">
                        <img class="img-fluid w-100" src="@Model.RoomCoverImage" alt="@Model.Title" />
                        <span class="badge bg-primary position-absolute top-0 start-0 m-3 px-3 py-2">@Model.Price $ / Gece</span>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="bg-light rounded-3 p-4 shadow-sm">
                        <h6 class="text-primary text-uppercase">@Model.RoomNumber Numaralı Oda</h6>
                        <h2 class="mb-3">@Model.Title</h2>
                        <p class="text-muted">@Model.Description</p>

                        <div class="row g-3 my-4">
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="fa fa-bed text-primary me-2"></i>
                                    <span>@Model.BedCount Yatak</span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="fa fa-bath text-primary me-2"></i>
                                    <span>@Model.BathCount Banyo</span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="fa fa-wifi text-primary me-2"></i>
                                    <span>@(string.IsNullOrWhiteSpace(Model.Wifi) ? "Wi-Fi bilgisi yok" : Model.Wifi)</span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="fa fa-door-open text-primary me-2"></i>
                                    <span>Konforlu Tasarım</span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex flex-wrap gap-3">
                            <a class="btn btn-primary px-4 py-2" href="/Booking/Create">Rezervasyon Yap</a>
                            <a class="btn btn-outline-dark px-4 py-2" asp-controller="Room" asp-action="Index">Tüm Odalar</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-4 mt-5">
                <div class="col-md-4">
                    <div class="border rounded-3 p-4 h-100">
                        <h5 class="mb-2">Avantajlar</h5>
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2"><i class="fa fa-check text-primary me-2"></i>Hızlı check-in</li>
                            <li class="mb-2"><i class="fa fa-check text-primary me-2"></i>Günlük temizlik</li>
                            <li><i class="fa fa-check text-primary me-2"></i>7/24 destek</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="border rounded-3 p-4 h-100">
                        <h5 class="mb-2">Oda Notları</h5>
                        <p class="text-muted mb-0">Modern dokunuşlarla dekore edilmiş bu oda, uzun konaklamalar için idealdir.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="border rounded-3 p-4 h-100">
                        <h5 class="mb-2">Hızlı Özet</h5>
                        <p class="mb-1"><strong>Oda No:</strong> @Model.RoomNumber</p>
                        <p class="mb-1"><strong>Fiyat:</strong> @Model.Price $</p>
                        <p class="mb-0"><strong>Wi-Fi:</strong> @(string.IsNullOrWhiteSpace(Model.Wifi) ? "-" : Model.Wifi)</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>